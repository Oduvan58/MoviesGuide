<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DetailsMovieFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/detail_movie_image_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_detail_movie_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_live_tv_24" />

    <TextView
        android:id="@+id/title_movie_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_title_movie_text_view"
        android:text="Title"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_title_movie_text_view"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_movie_image_view" />

    <TextView
        android:id="@+id/date_movie_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_title_movie_text_view"
        android:text="01.08.2008"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_date_text_view"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_movie_text_view" />

    <TextView
        android:id="@+id/description_movie_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_title_movie_text_view"
        android:text="Description"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_description_text_view"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_movie_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>